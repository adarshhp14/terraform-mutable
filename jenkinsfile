pipeline {
     agent { label 'workstation' }

     environment {
        ACTION = "apply"
        ENV = "dev"
        SSH = credentials('CENTOS_SSH')
        }

        options {
            ansiColor('xterm')
            options { disableConcurrentBuilds() }
        }

    stages {
        stage('VPC') {
           steps {
                   sh 'echo ${SSH} >/tmp/out'
                   sh '''
                    cd vpc
                    make ${ENV}-${ACTION}
           '''
           }
        }

        stage('DB') {
          steps {
                sh '''
                cd db
                make ${ENV}-${ACTION}
          '''
          }
        }
        stage('ALB') {
             steps{
                sh '''
                cd alb
                make ${ENV}-${ACTION}
             '''
             }
        }
    }
}

